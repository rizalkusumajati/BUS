<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.riztech.bus.presentation.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/goToHome"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.riztech.bus.presentation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/goToScan"
            app:destination="@id/scanFragment" />
        <action
            android:id="@+id/goToJalur"
            app:destination="@id/pilihJalurFragment" />
    </fragment>
    <fragment
        android:id="@+id/scanFragment"
        android:name="com.riztech.bus.presentation.ScanFragment"
        android:label="fragment_scan"
        tools:layout="@layout/fragment_scan" />
    <fragment
        android:id="@+id/pilihJalurFragment"
        android:name="com.riztech.bus.presentation.PilihJalurFragment"
        android:label="fragment_pilih_jalur"
        tools:layout="@layout/fragment_pilih_jalur" />
</navigation>